 CREATE TABLE acquirente (
Id_acquirente INT AUTO_INCREMENT PRIMARY KEY,
nome VARCHAR(100) NOT NULL,
mail VARCHAR(150) NOT NULL,
residenza VARCHAR(150),
metodo_pagamento VARCHAR(50)
);

CREATE TABLE prodotto (
    id_prodotto INT AUTO_INCREMENT PRIMARY KEY,
    prodotto VARCHAR(100) NOT NULL,
    destinazione VARCHAR(100) NOT NULL,
    peso DECIMAL(6,2) NOT NULL,
    prezzo DECIMAL(8,2) NOT NULL
);

CREATE TABLE ordine (
    id_ordine INT AUTO_INCREMENT PRIMARY KEY,
    id_acquirente INT NOT NULL,
    id_prodotto INT NOT NULL,
    stato_ordine VARCHAR(50) NOT NULL,
    quantita INT NOT NULL,
    data_ordine DATE NOT NULL,
    FOREIGN KEY (id_acquirente) REFERENCES acquirente(id_acquirente),
    FOREIGN KEY (id_prodotto) REFERENCES prodotto(id_prodotto)
);

